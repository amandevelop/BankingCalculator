<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CustomEmiCalculator" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryVariant">@color/app_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/app_color</item>
        <item name="colorSecondaryVariant">@color/app_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="fontFamily">@font/popinsmedium</item>
        <item name="android:windowBackground">@color/whitenew</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/border_color</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="ButtonStlye123" parent="android:style/Widget.Button">

        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="backgroundTint">@color/border_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:textSize">15sp</item>
    </style>

    <style name="ppf_Seekbar" parent="Base.Widget.AppCompat.SeekBar.Discrete">
        <item name="tickMark">@null</item>
    </style>

    <style name="customTHemer" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="colorAccent">@color/app_color</item>
        <item name="colorControlActivated">@color/app_color</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonPositive</item>
    </style>

    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>
    <style name="DatePickerTheme.ButtonPositive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/app_color</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/whitenew"
        android:layout_height="wrap_content">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="0dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintDimensionRatio="1:1.4142"
           android:layout_height="0dp">
           <LinearLayout
               android:id="@+id/ll1"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:orientation="vertical"
               android:layout_width="0dp"

               app:layout_constraintEnd_toStartOf="@id/ll2"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Business Name:"
                       android:textStyle="bold"
                       android:textSize="15sp"
                       android:textColor="#000000"/>
                   <TextView
                       android:id="@+id/tv_business_name"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Wappgo pvt. ltd"
                       android:textSize="15sp"
                       android:layout_marginHorizontal="5dp"
                       android:textColor="#000000"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Address: "
                       android:textSize="15sp"
                       android:textColor="#000000"/>
                   <TextView
                       android:id="@+id/tv_address"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Indore"
                       android:textSize="15sp"
                       android:layout_marginHorizontal="5dp"
                       android:textColor="#000000"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Contact: "
                       android:textSize="15sp"
                       android:textColor="#000000"/>
                   <TextView
                       android:id="@+id/tv_contact"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="97822*****"
                       android:textSize="15sp"
                       android:layout_marginHorizontal="5dp"
                       android:textColor="#000000"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Email: "
                       android:textSize="15sp"
                       android:textColor="#000000"/>
                   <TextView
                       android:id="@+id/tv_email"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="wa*****@gmail.com"
                       android:textSize="15sp"
                       android:layout_marginHorizontal="5dp"
                       android:textColor="#000000"/>
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:id="@+id/ll2"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:orientation="vertical"

               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="INVOICE NO. :"
                       android:textSize="15sp"
                       android:layout_marginHorizontal="5dp"
                       android:textColor="#000000"/>
                   <TextView
                       android:id="@+id/tv_invoice_number"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="001"
                       android:textSize="15sp"
                       android:textColor="#000000"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="DATE:"
                       android:textSize="15sp"
                       android:layout_marginHorizontal="5dp"
                       android:textColor="#000000"/>
                   <TextView
                       android:id="@+id/tv_date"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="001"
                       android:textSize="15sp"
                       android:textColor="#000000"/>
               </LinearLayout>

           </LinearLayout>


           <LinearLayout
               android:id="@+id/ll3"
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_marginTop="20dp"
               app:layout_constraintTop_toBottomOf="@id/ll1"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="To"
                       android:textStyle="bold"
                       android:textSize="15sp"
                       android:layout_marginEnd="10dp"
                       android:textColor="#000000"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Person Name: "
                       android:textSize="15sp"
                       android:layout_marginHorizontal="5dp"
                       android:textColor="#000000"/>
                   <TextView
                       android:id="@+id/person_name"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Arjun rana"
                       android:textSize="15sp"
                       android:layout_marginHorizontal="5dp"
                       android:textColor="#000000"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="To"
                       android:visibility="invisible"
                       android:textStyle="bold"
                       android:textSize="15sp"
                       android:layout_marginEnd="10dp"
                       android:textColor="#000000"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Business Name :"
                       android:textSize="15sp"
                       android:layout_marginHorizontal="5dp"
                       android:textColor="#000000"/>
                   <TextView
                       android:id="@+id/to_business_name"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="IT Services"
                       android:textSize="15sp"
                       android:layout_marginHorizontal="5dp"
                       android:textColor="#000000"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="To"
                       android:textStyle="bold"
                       android:textSize="15sp"
                       android:visibility="invisible"
                       android:layout_marginEnd="10dp"
                       android:textColor="#000000"/>
                   <TextView
                       android:id="@+id/to_business_address"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Address: \n"
                       android:textSize="15sp"
                       android:layout_marginHorizontal="5dp"
                       android:textColor="#000000"/>

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="To"
                       android:textStyle="bold"
                       android:textSize="15sp"
                       android:visibility="invisible"
                       android:layout_marginEnd="10dp"
                       android:textColor="#000000"/>
                   <TextView
                       android:id="@+id/to_contact"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Contact :"
                       android:textSize="15sp"
                       android:layout_marginHorizontal="5dp"
                       android:textColor="#000000"/>

               </LinearLayout>
           </LinearLayout>


           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               app:layout_constraintTop_toBottomOf="@id/ll3"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:weightSum="5"
                   android:layout_marginHorizontal="10dp"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="S.no."
                       android:layout_weight="1.1"
                       android:textSize="12sp"
                       android:padding="2dp"
                       android:textColor="#000000"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Item Description"
                       android:textSize="12sp"
                       android:padding="2dp"
                       android:layout_weight="0.9"
                       android:textColor="#000000"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Quantity"
                       android:textSize="12sp"
                       android:padding="2dp"
                       android:layout_weight="1"
                       android:textColor="#000000"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Discount"
                       android:textSize="12sp"
                       android:padding="2dp"
                       android:layout_weight="1"
                       android:textColor="#000000"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Value"
                       android:padding="2dp"
                       android:layout_weight="1"
                       android:textSize="12sp"
                       android:textColor="#000000"/>

               </LinearLayout>

               <include layout="@layout/item_layout_for_pdf"/>
               <include layout="@layout/item_layout_for_pdf"/>
               <include layout="@layout/item_layout_for_pdf"/>
               <include layout="@layout/item_layout_for_pdf"/>
           </LinearLayout>
       </androidx.constraintlayout.widget.ConstraintLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CompareLoan">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0.5dp"
                        android:layout_weight="1"
                        android:background="@color/app_color"
                        android:padding="15dp"
                        android:text="Loan 1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0.5dp"
                        android:layout_weight="1"
                        android:background="@color/app_color"
                        android:padding="15dp"
                        android:text="Loan 2"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:text="Loan Amount"
                    android:textColor="@color/text_color_blue"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/et_loanamt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0.5dp"
                        android:layout_weight="1"
                        android:hint="Loan Amount 1"
                        android:inputType="number"
                        android:maxLength="9"
                        android:background="@drawable/rounded_edittext"
                        android:drawableStart="@drawable/ic_rupees"
                        android:drawablePadding="10dp"
                        android:padding="15dp"
                        android:textColor="@color/text_color_blue"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_loanamt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0.5dp"
                        android:layout_weight="1"
                        android:hint="Loan Amount 2"
                        android:inputType="number"
                        android:background="@drawable/rounded_edittext"
                        android:drawableStart="@drawable/ic_rupees"
                        android:drawablePadding="10dp"
                        android:maxLength="9"
                        android:padding="15dp"
                        android:textColor="@color/text_color_blue"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:text="Interest %"
                    android:textColor="@color/text_color_blue"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/et_interest1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0.5dp"
                        android:layout_weight="1"
                        android:hint="Rate of interest 1"
                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:background="@drawable/rounded_edittext"
                        android:drawableStart="@drawable/ic__79859"
                        android:drawablePadding="10dp"
                        android:padding="15dp"
                        android:textColor="@color/text_color_blue"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_interest2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0.5dp"
                        android:layout_weight="1"
                        android:hint="Rate of interest 2"
                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:background="@drawable/rounded_edittext"
                        android:drawableStart="@drawable/ic__79859"
                        android:drawablePadding="10dp"
                        android:padding="15dp"
                        android:textColor="@color/text_color_blue"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:text="Period(Month)"
                    android:textColor="@color/text_color_blue"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/et_period1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0.5dp"
                        android:layout_weight="1"
                        android:hint="Period 1"
                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:background="@drawable/rounded_edittext"
                        android:drawableStart="@drawable/ic__79859"
                        android:drawablePadding="10dp"
                        android:padding="15dp"
                        android:textColor="@color/text_color_blue"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_period2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0.5dp"
                        android:layout_weight="1"
                        android:hint="Period 2"
                        android:inputType="number"
                        android:maxLength="3"
                        android:background="@drawable/rounded_edittext"
                        android:drawableStart="@drawable/ic__79859"
                        android:drawablePadding="10dp"
                        android:padding="15dp"

                        android:textAlignment="center"
                        android:textColor="@color/text_color_blue"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="15sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_caculate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="20dp"
                    android:backgroundTint="@color/app_color"
                    android:elevation="5dp"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="10dp"
                    android:text="@string/calculate"
                    app:cornerRadius="10dp" />

                <LinearLayout
                    android:id="@+id/result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:text="Monthly EMI"
                        android:textAlignment="center"
                        android:textColor="@color/text_color_blue"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/result_l1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="0.5dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Loan 1"
                            android:textAlignment="center"
                            android:textColor="@color/text_color_blue"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/result_l2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0.5dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Loan 2"
                            android:textAlignment="center"
                            android:textColor="@color/text_color_blue"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/differenceloan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:text="Loan difference"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:text="Interest Payable"
                        android:textAlignment="center"
                        android:textColor="@color/text_color_blue"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/result_i1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="0.5dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Interest 1"
                            android:textAlignment="center"
                            android:textColor="@color/text_color_blue"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/result_i2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0.5dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Interest 2"
                            android:textAlignment="center"
                            android:textColor="@color/text_color_blue"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/differenceinterest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:text="Interest difference"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:text="Total Payment"
                        android:textAlignment="center"
                        android:textColor="@color/text_color_blue"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/result_t1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="0.5dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Period 1"
                            android:textAlignment="center"
                            android:textColor="@color/text_color_blue"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/result_t2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0.5dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Period 2"
                            android:textAlignment="center"
                            android:textColor="@color/text_color_blue"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/differenceperiod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:text="Time period difference"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>